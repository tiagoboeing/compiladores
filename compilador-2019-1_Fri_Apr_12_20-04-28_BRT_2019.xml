<?xml version="1.0" encoding="UTF-8"?>
<project name="compiladores" default="all">
  
  
  <property file="compilador-2019-1.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.egg"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.swc"/>
    <include name="*.war"/>
    <include name="*.zip"/>
    <include name="*.ane"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module compiladores -->
  
  <dirname property="module.compiladores.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.compiladores" value="${jdk.home.1.8}"/>
  <property name="module.jdk.bin.compiladores" value="${jdk.bin.1.8}"/>
  <property name="module.jdk.classpath.compiladores" value="jdk.classpath.1.8"/>
  
  <property name="compiler.args.compiladores" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="compiladores.output.dir" value="${module.compiladores.basedir}/compilador/out/production/compiladores"/>
  <property name="compiladores.testoutput.dir" value="${module.compiladores.basedir}/compilador/out/test/compiladores"/>
  
  <path id="compiladores.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="compiladores.module.production.classpath">
    <path refid="${module.jdk.classpath.compiladores}"/>
  </path>
  
  <path id="compiladores.runtime.production.module.classpath">
    <pathelement location="${compiladores.output.dir}"/>
  </path>
  
  <path id="compiladores.module.classpath">
    <path refid="${module.jdk.classpath.compiladores}"/>
    <pathelement location="${compiladores.output.dir}"/>
  </path>
  
  <path id="compiladores.runtime.module.classpath">
    <pathelement location="${compiladores.testoutput.dir}"/>
    <pathelement location="${compiladores.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.compiladores">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.compiladores">
    <patternset refid="excluded.from.module.compiladores"/>
  </patternset>
  
  <path id="compiladores.module.sourcepath">
    <dirset dir="${module.compiladores.basedir}">
      <include name="compilador/src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.compiladores" depends="compile.module.compiladores.production,compile.module.compiladores.tests" description="Compile module compiladores"/>
  
  <target name="compile.module.compiladores.production" depends="register.custom.compilers" description="Compile module compiladores; production classes">
    <mkdir dir="${compiladores.output.dir}"/>
    <javac2 destdir="${compiladores.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.compiladores}/javac">
      <compilerarg line="${compiler.args.compiladores}"/>
      <bootclasspath refid="compiladores.module.bootclasspath"/>
      <classpath refid="compiladores.module.production.classpath"/>
      <src refid="compiladores.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.compiladores"/>
    </javac2>
    
    <copy todir="${compiladores.output.dir}">
      <fileset dir="${module.compiladores.basedir}/compilador/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.compiladores.tests" depends="register.custom.compilers,compile.module.compiladores.production" description="compile module compiladores; test classes" unless="skip.tests"/>
  
  <target name="clean.module.compiladores" description="cleanup module">
    <delete dir="${compiladores.output.dir}"/>
    <delete dir="${compiladores.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.compiladores" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.compiladores" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>